<div class="form-wrapper">
  <%= form_with model: @schedule do |f| %>
    <div class="row g-3">
      <div class="col-12">
        <%= f.label :title ,"タイトル", class: "form-label mandatory-field" %>
        <%= f.text_field :title, class: "form-control", placeholder: "タイトル" %>
        <% if @schedule.errors.any? %>
          <div class="field-alert">
            <%= @schedule.errors.full_messages_for(:title).first %>
          </div>
        <% end %>
      </div>
      <div class="col-6">
        <%= f.label :start_date,"開始日", class: "form-label mandatory-field"%>
        <%= f.date_field :start_date, class: "form-control", id: "flatpickr", placeholder: "----/--/--" %>
        <% if @schedule.errors.any? %>
          <div class="field-alert">
            <%= @schedule.errors.full_messages_for(:start_date).first %>
          </div>
        <% end %>
      </div>
      <div class="col-6">
        <%= f.label :end_date,"終了日", class: "form-label mandatory-field" %>
        <%= f.date_field :end_date, class: "form-control", id: "flatpickr", placeholder: "----/--/--" %>
        <% if @schedule.errors.any? %>
          <div class="field-alert">
            <%= @schedule.errors.full_messages_for(:end_date).first %>
          </div>
        <% end %>
      </div>
      <div class="col-12 custom-control custom-checkbox">
        <%= f.check_box :is_allday, class: "custom-control-input" %>
        <%= f.label :is_allday,"終日の場合はチェックを入れてください", class: "checkbox-label" %>
      </div>
      <div class="col-12">
        <%= f.label :memo,"スケジュールメモ", class: "form-label" %>
        <%= f.text_area :memo, class: "form-control", placeholder: "メモを入力する" %>
      </div>
      <div class="form-buttons">
        <%= link_to "キャンセル", :schedules_index, class: "button btn-cancel"%>
        <%= f.submit "保存", class: "button btn-save" %>
      </div>
    </div>
  <% end %>
</div>

<% if flash[:alert] %>
  <p class="alert alert-danger">
    <%= flash[:alert] %>
    <button type="button" class="close" data-bs-dismiss="alert">&times;</button>
  </p>
<% end %>
